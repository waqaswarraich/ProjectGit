
@{
    ViewBag.Title = "Register";
}

<div class="container" style="background-color:darkseagreen">
    

    <div class="row" style="background-color:cadetblue">
        <div class="col-sm-12">
            <img src="~/Images/logo.jpg" class="img-thumbnail pull-left " alt="Cinque Terre" width="50" height="50">
            
            <form class="form-inline pull-right  formLogin">
                <br />
                <div class="form-group">
                    <label for="Email" class="control-label ">Email:</label>
                    <input type="text" id="Email" name="Email" class="form-control" placeholder="Email" autofocus/>
                </div>
                <div class="form-group">
                    <label for="Name" class="control-label">Password:</label>
                    <input type="password" id="Password" name="Password" class="form-control" placeholder="Password" />
                </div>

                <div class="form-group">

                    <button type="button" id="btnLogin" name="btnLogin" class="btn btn-primary btn-sm form-control  "><span class="glyphicon glyphicon-log-in"> Login</span></button>

                </div>
                <div class="form-group">

                    <button type="reset" id="btnReset" name="btnReset" class="btn btn-default btn-sm form-control  ">Reset</button>

                </div>
            </form>
        </div>
                <br />
                <hr />
    </div>
    
    <h3 class="col-sm-offset-3"><span class="glyphicon glyphicon-user"></span>  SignUp</h3>
    <br />
    
   <div class="row">
       <div class="col-sm-12">
           <div class="clearfix"></div>
           <form class="form-horizontal  formRegister">
                       <div class="hidden form-group">
                           <label  class="control-label co-sm-2" for="ID">ID:</label>
                           <div class="col-sm-10">
                               <input type="text" id="ID" name="ID" class="form-control" />
                           </div>
                       </div>
                        <div class="form-group">
                           <label for="Name" class="control-label col-sm-2" >Name:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Name" name="Name" placeholder="Name" />
                            </div>
                        </div>
                       <div class="form-group">
                           <label for="Email" class="control-label col-sm-2">Email:</label>
                           <div class="col-sm-10">
                               <input type="text" id="Email" name="Email" class="form-control" placeholder="Email" />
                           </div>
                       </div>
                       <div class="form-group">
                           <label for="Password" class="control-label col-sm-2">Password:</label>
                           <div class="col-sm-10">
                               <input type="password" id="Password" name="Password" class="form-control" placeholder="Password" />
                           </div>
                       </div>
                       <div class="form-group">
                           <label for="City" class="control-label col-sm-2">City:</label>
                           <div class="col-sm-10">
                               <input type="text" id="City" name="City" class="form-control" placeholder="City" />
                           </div>
                       </div>
                      <div class="form-group">
                           <label for="RoleId" class="col-sm-2 control-label">Roles:</label>
                          <div class="col-sm-10">
                              <select id="RoleId" name="RoleId" required="required" class="form-control" ></select>
                          </div>
                       </div>
               
                    <div class="form-group">
                               <label class="col-sm-offset-2">
                                   <input type="checkbox" name="IsActive" id="IsActive" value="true" class="flat" /> Is Active
                               </label>
                    </div>
                       
                <div class="form-group" >
                    <div class="col-sm-offset-2 col-sm-3" >
                        <button type="button" id="btnSubmit" name="btnSubmit" class="btn btn-primary btn-sm form-control  ">Register</button>
                        <button type="reset" id="btnReset" name="btnReset" class="btn btn-default btn-sm form-control  ">Reset</button>
                    </div>
                </div>
           </form>
       </div>
   </div>
</div>


<script src="~/Scripts/CustomJS/UserRegister.js"></script>