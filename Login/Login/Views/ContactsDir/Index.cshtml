
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <br />
        <h2>Add Contact</h2>
        <div class="col-sm-12">
            <form class="form-horizontal col-sm-offset-3 formContact">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" id="Name" name="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Designation</label>
                    <input type="text" id="Designation" name="Designation" class="form-control" />
                </div>
                <div class="form-group">
                    <label>ContactNo#</label>
                    <input type="text" id="ContactNo" name="ContactNo" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" id="Email" name="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Client</label><br />

                    <select id="ClientId" name="ClientId" class="form-control" required="required"></select>
                </div>
                <div class="form-group ">
                    <label>
                        <input type="checkbox" name="IsActive" id="IsActive" value="true" class="flat" > Is Active
                    </label>
                </div>
                <div class="form-group">
                    <button type="button" id="btnContact" class="col-sm-offset-2  btn btn-lg btn-primary"><span class="glyphicon glyphicon-plus-sign">Add</span></button>
                    <button type="button" id="btnReset" class="btn btn-lg btn-primary"><span class="glyphicon glyphicon-refresh">Reset</span></button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/Scripts/CustomJS/ContactAdd.js"></script>